<div class="relative inline-block text-left mb-4" {{on-click-outside (fn this.close)}}>
  <div {{on "click" (fn this.toggle)}}>
    <span class="rounded-md shadow-sm">
      <button type="button"
        class="inline-flex justify-center w-full rounded-md border border-gray-300 px-6 py-2 bg-white text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-teal-500 active:bg-gray-50 active:text-gray-800 transition ease-in-out duration-150"
        id="options-menu" aria-haspopup="true" aria-expanded="true">
        Filtres
        <svg class="-mr-1 ml-2 h-5 w-5 transition ease-out duration-200 transform {{if this.isOpen "rotate-180"}}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd"
            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
            clip-rule="evenodd" />
        </svg>
      </button>
    </span>
  </div>
  <div class="origin-top-left absolute left-0 mt-2 w-64 rounded-md shadow-lg {{if this.isOpen "transition ease-out duration-100 transform opacity-100 scale-100" "transition ease-out duration-75 transform opacity-0 scale-95"}}">
    <div class="rounded-md bg-white shadow-xs {{if this.isOpen "block" "hidden"}}">
      <div class="py-1" role="menu">
        {{#each @options as |option|}}
          {{#if (eq option.field "title")}}
            <LinkTo @route={{@route}} @query={{hash title=(get option "dir") price=null}} {{on "click" (fn this.close)}}
            class="block px-4 py-2 text-sm leading-5 text-gray-700 transition ease-out duration-100 hover:bg-indigo-900 hover:text-white focus:outline-none focus:bg-gray-100 focus:text-gray-900"
            >
              {{get option @field}}
            </LinkTo>
          {{else}}
            <LinkTo @route={{@route}} @query={{hash price=(get option "dir") title=null}} {{on "click" (fn this.close)}}
            class="block px-4 py-2 text-sm leading-5 text-gray-700 transition ease-out duration-100 hover:bg-teal-900 hover:text-white focus:outline-none focus:bg-gray-100 focus:text-gray-900"
            >
              {{get option @field}}
            </LinkTo>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>